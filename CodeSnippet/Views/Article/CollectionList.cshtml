@model IEnumerable<ArticleItemBody>

<div style="width:1275px;margin: 20px auto;">
    @InfraStructure.Utility.HtmlUiHelper.GetTitle(ViewBag.Title)
</div>
<div class="row" style="width:1275px;margin: 20px auto;">
    <div class="col-md-8" style="margin:0;padding:0">
        <table class="table table-striped">
            <tr>
                <th>
                    标题
                </th>
                <th>
                    作者
                </th>
                <th>
                    阅读数
                </th>
                <th>
                    评论数
                </th>
                <th>
                    收藏数
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="/Article/Index?ArticleId=@item.Sn">@item.ArticleInfo.Title</a>
                    </td>
                    <td>
                        @item.AuthorInfo.NickName
                    </td>
                    <td>
                        @item.ReadCnt
                    </td>
                    <td>
                        @item.CommentCnt
                    </td>
                    <td>
                        @item.StockCnt
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4" style="margin:0;padding:0">
        @*@Html.DisplayFor(t => MostAuthorByTag, "SideColumn", MostAuthorByTag)*@
    </div>
</div>